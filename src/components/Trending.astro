---
import BlogDetails from "./BlogDetails.astro";

const {className, gridClassName} = Astro.props;

const blogs = [
    {
        rank: 1,
        category: "Politics",
        title: "This is title"
    },
    {
        rank: 2,
        category: "Economy",
        title: "This is title"
    },
    {
        rank: 3,
        category: "Celebrity",
        title: "This is title"
    },
    {
        rank: 4,
        category: "Politics",
        title: "This is title"
    },
    {
        rank: 5,
        category: "Politics",
        title: "This is title"
    }
]
---

<div class={`flex flex-col gap-5 ${className}`}>
    <div>Trending</div>
    <div class={`grid md:grid-cols-2 lg:grid-cols-5 gap-5 ${gridClassName}`}>
        {
            blogs.map(blog => (
                <div class="flex flex-row items-center gap-5">
                    <div class="flex-none">
                        {blog.rank}
                    </div>
                    <div class="flex-grow">
                        <BlogDetails>
                            {blog.rank}
                            <span slot="category">{blog.category}</span>
                            <h2 slot="title">{blog.title}</h2>
                            <Fragment slot="author">
                                <span>Author name</span>
                            </Fragment>
                        </BlogDetails>
                    </div>
                </div>
            ))
        }
    </div>
</div>